{
  "name": "@vbobel/design-system",
  "scripts": {
    "build": "npm run build:styles-ui && npm run build:react-ui",
    "build:styles-ui": "lerna exec --scope=@vbobel/design-system-styles-ui -- npm run build",
    "build:react-ui": "lerna exec --scope=@vbobel/design-system-react-ui -- npm run build",
    "prerelease": "npm run build",
    "release": "lerna publish --conventional-commits --dist-tag latest"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
